                <a href="#pablo" class="btn btn-primary btn-round">Follow</a>
            </div>
        </div>
    </div>*@
</div>

<script>
    $(document).ready(function () {
        
        var idDepartamento;
        $("#Departamentos").change(function () {
            idDepartamento = $("#Departamentos").val();
            //alert(idDepartamento);
            $("#Municipios").empty();
            llenarMunicipios(idDepartamento);
        });
    });

    function llenarMunicipios(idDepartamento){
        $.ajax({
            type: "POST",
            url: "/Bautismos/AjaxMunicipio",
            data: { idDepartamento },                                  
            error: function (error) {
                console.log(error);
            }
        }).done(function (data) {            
            $.each(data, function (i,item) {
                //console.log(item.nombreMunicipio);                
                $("#Municipios").append($("<option>", {
                    value: item.municipioId,
                    text: item.nombreMunicipio
                }));
            });
        });
    }
</script>